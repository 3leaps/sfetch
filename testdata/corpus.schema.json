{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/3leaps/sfetch/testdata/corpus.schema.json",
  "title": "sfetch corpus manifest",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["repo", "tag", "expectedWorkflow", "expectSuccess", "tier"],
    "properties": {
      "repo": {"type": "string", "minLength": 1},
      "tag": {"type": "string", "minLength": 1},
      "assetMatch": {"type": "string"},
      "assetRegex": {"type": "string"},
      "expectedWorkflow": {"type": "string", "enum": ["A", "B", "C", "none", "insecure"]},
      "expectSuccess": {"type": "boolean"},
      "tier": {"type": "string", "enum": ["fast", "slow"]},
      "category": {
        "type": "string",
        "enum": ["release", "github-raw", "url", "format-test"],
        "description": "Entry category for filtering: release (GitHub releases), github-raw (raw repo content), url (arbitrary URLs), format-test (file format testing)"
      },
      "note": {"type": "string"},
      "pattern": {"type": "string"},
      "allowHTTP": {
        "type": "boolean",
        "description": "Pass --allow-http flag to sfetch (for testing HTTP-only URLs)"
      }
    },
    "anyOf": [
      {"required": ["assetMatch"]},
      {"required": ["assetRegex"]}
    ],
    "additionalProperties": false
  }
}
